<html xmlns="http://www.w3.org/1999/xhtml"<%= yield :html_tags %> xml:lang="en" lang="en">
<head>
	<%= yield :meta_tags %>
  <meta http-equiv="content-type" content="text/html;charset=utf-8" />
	<meta name="author" content="8PM.TV" />
	<title>
	  <%= @page_title ? "8 PM.TV - #{@page_title}" : "8 PM.TV - Track your favorite TV shows and share them with your friends" %>
  </title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'jquery.autocomplete',
                             'jquery.placeholder', 'jquery.autogrowtextarea',
                             'jquery.tipsy', 'jquery-ui-effects',
                             'jquery.livequery', 'jquery.rating' %>
  <link rel="shortcut icon" href="/images/favicon.ico" />
  <%= csrf_meta_tag %>
  <script type="text/javascript">
	  var showsPath = "<%= search_shows_path %>";
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-19821625-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript';
      ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</head>
<body>
	<div id="content">
	  <div id="header">
	    <div id="logo">
	      <h1>
	        <%= link_to "8PM.#{content_tag :span, 'TV', :class => 'title'}".html_safe, root_url, :title => "8PM.TV" %>
	      </h1>
        <p><span style="color:black">TV Shows go social!</span> Share your favorites TV shows with your friends</p>
	    </div>
	    <div class="clear"></div>
	  </div>
	  <div id="header-bar">
      <div id="header-bar-content">
        <ul class="menu">
          <li><%= link_to "TV Shows", shows_path %></li>
          <li><%= link_to "Members", users_path %></li>
          <li class="search">
            <div id="search">
      			  <%= form_tag search_shows_path, :method => :get do -%>
      			    <p>
      			      <%= text_field_tag "q", params[:q], :id => :q_search,
      			          :class => "search",
      			          :placeholder => "Type the name of a TV show" %>
      			    </p>
      			  <% end -%>
      			</div>
          </li>
        </ul>
        <ul class="menu" id="menu-login">
          <% if user_signed_in? %>
  				<li class="folded">
  				  <%= link_to (content_tag :span, image_tag(current_user.avatar_url(:small), :style => "display:inline-block"), :id => "user_photo") + (content_tag :span, current_user.username, :id => "user_name"), current_user %>
  				  <ul class="submenu" style="display:none">
  				    <li><%= link_to "Settings", edit_user_registration_path %>
  				    <li class="last"><%= link_to "Logout", destroy_user_session_path %></li>
  				  </ul>
  				</li>
  				<% else %>
  				<li><%= link_to "Login", new_user_session_path %></li>
  				<% end %>
        </ul>
        <div class="clear"></div>
      </div>
    </div>
    <% if flash[:notice] %>
      <div id="flash_notice" class="flash">
        <div class="flash-content">
          <a href="#" class="flash-handler">Hide</a>
          <p><%= flash[:notice] %></p>
        </div>
      </div>
    <% end %>

    <% if flash[:error] %>
      <div id="flash_error" class="flash">
        <div class="flash-content">
          <a href="#" class="flash-handler">Hide</a>
          <p><%= flash[:error] %></p>
        </div>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div id="flash_error" class="flash">
        <div class="flash-content">
          <a href="#" class="flash-handler">Hide</a>
          <p><%= flash[:alert] %></p>
        </div>
      </div>
    <% end %>
    
    <% if flash[:warn] %>
      <div id="flash_warn" class="flash">
        <div class="flash-content">
          <a href="#" class="flash-handler">Hide</a>
          <p><%= flash[:warn] %></p>
        </div>
      </div>
    <% end %>
    
    <%= yield :gbox %>

    <% right_content = (yield :right) %>
    <div class="left<%= right_content.blank? ? " width-full" : "" %>">
        <%= yield %>
    </div>

    <%= right_content unless right_content.blank? %>
		<div class="footer">
			<p>
			  Follow us on Twitter! <a href="http://twitter.com/8PMTV" target="_blank">@8PMTV</a> &middot;
			  <a href="http://feedback.eightpm.tv" target="_blank">Feedbacks</a>
		  </p>
		</div>
	</div>
</body>
