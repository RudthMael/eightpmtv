<!DOCTYPE html>
<html>
<head>
  <title>Tvshows</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>


<div id="global">
  <div id="header">
    <div id="header-container">
      <h1 class="logo">A very sexy logo</h1>
      <ul>
        <li><%= link_to "Home", root_url %></li>
        <li><%= link_to "Series", shows_path %></li>
      </ul>
      <%= form_tag url_for(search_shows_path) do %>
        <%= text_field_tag :q, params[:q] %>
      <% end -%>
      <div style="clear:both"></div>
    </div>
  </div>
  <div id="global-container">
    <%= yield %>
  </div>
  <div id="footer">
    
  </div>
</div>
</body>
</html>
