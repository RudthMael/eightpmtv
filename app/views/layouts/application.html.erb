<!DOCTYPE html>
<html>
<head>
  <title>
    8 PM.TV - Track your favorite TV shows and share them with your friends
  </title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery.js', 'rails.js', 'jquery.autocomplete',
                             'application.js' %>
  <script type="text/javascript">
    var showsPath = "<%= search_shows_path %>";
    $(document).ready(function(){
      $("#search_input").autocomplete({
        serviceUrl:"/shows/search/",
        minChars:1,
        onSelect: function(value, data){
          window.location = '/shows/' + data.param;          
        }, 
      });
    });
  </script>
  <link rel="shortcut icon" href="/images/favicon.ico">
  <%= csrf_meta_tag %>
</head>
<body>
<div id="global">
  <div id="header">
    <div id="header-container">
      <h1 class="logo"><%= link_to "8 PM.TV", root_url %></h1>
      <ul>
        <li><%= link_to "Series", shows_path %></li>
        <% if user_signed_in? %>
        <li>
          <%= link_to current_user.username, edit_user_registration_path %>
        </li>
        <li><%= link_to "Sign out", destroy_user_session_path %></li>
        <% else %>
        <li><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
      </ul>
      <%= form_tag url_for(search_shows_path) do %>
        <%= text_field_tag :q, params[:q], :id => "search_input" %>
      <% end -%>
      <div style="clear:both"></div>
    </div>
  </div>
  <div id="global-container">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </div>
  <div id="footer">  
  </div>
</div>
</body>
</html>
